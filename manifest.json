{
  "name": "BirdSite",
  "version": "0.1",
  "manifest_version": 2,
  "description": "A browser extension for cross-posting Mastodon toots to Twitter.",
  "homepage_url": "https://github.com/kemenaran/birdsite",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [ "https://*" ],
      "js": [
        "js/lib/oAuth.js",
        "js/lib/sha1.js",
        "js/lib/twitter.js",
        "js/mastodon/birdsite_ui.js",
        "js/mastodon/birdsite.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": [ "https://joinmastodon.org/*" ],
      "js": [ "js/callback_page.js" ],
      "run_at": "document_start",
      "all_frames": false
    },
  ],
  "background": {
    "scripts": [
      "js/lib/oAuth.js",
      "js/lib/sha1.js",
      "js/lib/twitter.js",
      "js/background_page.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "storage",
    "https://api.twitter.com/*"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
